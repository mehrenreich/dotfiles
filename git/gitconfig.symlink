[alias]
    br = branch
    ci = commit
    co = checkout
    diff-previous = !git diff HEAD^ HEAD
    dp = diff-previous
    st = status
    sw = switch
    tree = !git log --oneline --graph --decorate --all

[commit]
	gpgsign = false

[gpg]
	program = /usr/bin/gpg

[init]
	defaultBranch = main


