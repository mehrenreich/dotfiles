[alias]
    br = branch
    ci = commit
    co = checkout
    diff-previous = !git diff HEAD^ HEAD
    dp = diff-previous
    st = status
    sw = switch
    tree = !git log --oneline --graph --decorate --all

[commit]
    gpgsign = true

[gpg]
    program = gpg

[init]
    defaultBranch = main

